extends ../_layout
block content
    main.main__container
        h1.heading= id ? 'Edit a Choice' : 'Create a New Choice'
        form.form(method="POST")
            label.form__label 
                span Choice Value
                input.form__input(type="text", name="value" value=value)
            label.form__label
                span Choice Type
                label.form__labelInline
                    input.form__input__radio(type="radio", name="type", checked=type===="correct")
                    span Correct
                label.form__labelInline
                    input.form__input__radio(type="radio", name="type", checked=type==="incorrect")
                    span Incorrect
            button(type="submit" class="button active")= id ? 'Save Choice' : 'Add a New Choice'
            if errors
                for error in errors
                    small.flash=error.msg